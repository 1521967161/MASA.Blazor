<MCard Flat
       Class="py-12">
    <MCardText>
        <MRow Align="center"
              Justify="center">
            <MCol Span="12">
                <p class="text-center">
                    Multiple
                </p>
            </MCol>
            <MButtonGroup @bind-Values="_values"
                          Multiple>
                <MButton Value="@("left")">
                    <MIcon>mdi-format-align-left</MIcon>
                </MButton>
                <MButton Value="@("center")">
                    <MIcon>mdi-format-align-center</MIcon>
                </MButton>
                <MButton Value="@("right")">
                    <MIcon>mdi-format-align-right</MIcon>
                </MButton>
                <MButton Value="@("justify")">
                    <MIcon>mdi-format-align-justify</MIcon>
                </MButton>
            </MButtonGroup>
            <MCol Span="12"
                  Class="text-center">
                Model: [@(string.Join(',',_values))];
            </MCol>
        </MRow>
    </MCardText>
</MCard>

@code {
    private List<StringNumber> _values = new()
    {

    };
}


<MContainer>
    <MRow Justify="space-around">
        @foreach (var rounded in _roundeds)
	{
        <MCol Cols="12"
              Md="4">
            <MSheet Class="pa-12"
                    Color="grey lighten-3">
                <div></div>
                <MSheet Rounded="rounded"
                        Class="mx-auto"
                        Height="100"
                        Width="100"></MSheet>
                <div></div>
            </MSheet>
        </MCol>
	}
    </MRow>
</MContainer>

@code{
    private OneOf.OneOf<bool, string>[] _roundeds = new OneOf.OneOf<bool, string>[] 
    {
        false,true,"xl"
    };
}



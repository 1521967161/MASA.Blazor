<div class="text-center">
    <MButton Dark
           Color="indigo"
           OnClick="()=>_snackbar = true">
        Open Snackbar
    </MButton>

    <MSnackbar @bind-IsActive="_snackbar"
                Vertical>
        <ChildContent>
            Hello, I'm a snackbar
        </ChildContent>
        <ActionContent>
            <MButton Color="indigo"
                     Text
                     OnClick="()=>_snackbar = false">
                Close
            </MButton>
        </ActionContent>
    </MSnackbar>
</div>

@code{
    private bool _snackbar;
}

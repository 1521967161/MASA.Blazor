<div class="text-center">
    <MButton Dark
           Color="orange darken-2"
           OnClick="()=>_snackbar = true">
        Open Snackbar
    </MButton>

    <MSnackbar @bind-IsActive="_snackbar"
                Timeout="3000">
        <ChildContent>
            Hello, I'm a snackbar
        </ChildContent>
        <ActionContent>
            <MButton Color="blue"
                     Text
                     OnClick="()=>_snackbar = false">
                Close
            </MButton>
        </ActionContent>
    </MSnackbar>
</div>

@code{
    private bool _snackbar;
}

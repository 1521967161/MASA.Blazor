<MStepper Value="_step" Vertical>
    <MStepperStep Step="1" Complete="_step>1">
        Name of step 1
    </MStepperStep>
    <MStepperContent Step="1">
        <MCard Class="mb-12" Height="200">1</MCard>
        <MButton Color="primary" Click="()=>_step=2">Continue</MButton>
        <MButton Text>Cancel</MButton>
    </MStepperContent>
    <MStepperStep Step="2" Complete="_step>2">
        Name of step 2
    </MStepperStep>
    <MStepperContent Step="2">
        <MCard Class="mb-12" Height="200">2</MCard>
        <MButton Color="primary" Click="()=>_step=3">Continue</MButton>
        <MButton Text>Cancel</MButton>
    </MStepperContent>
    <MStepperStep Step="3">
        Name of step 3
    </MStepperStep>
    <MStepperContent Step="3">
        <MCard Class="mb-12" Height="200">3</MCard>
        <MButton Color="primary" Click="()=>_step=1">Continue</MButton>
        <MButton Text>Cancel</MButton>
    </MStepperContent>
</MStepper>

@code{
    private int _step = 1;
}
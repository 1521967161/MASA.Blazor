<MRow Align="center"
	  Justify="center">
	<MCard Style="height:300px;width:250px">
		<Cover>
			<MRow Justify="center">
				<MButton Color="success"
						 Style="margin-top:24px"
						 Click="Toggle">
					Show Overlay
				</MButton>

				<MOverlay Absolute
						  Value="overlay">
					<MButton Color="success"
							 Click="Hide">
						Hide Overlay
					</MButton>
				</MOverlay>
			</MRow>
		</Cover>
	</MCard>
</MRow>

@code {
	bool overlay = false;

	void Toggle(MouseEventArgs args)
	{
		overlay = !overlay;
	}

	void Hide(MouseEventArgs args)
	{
		System.Console.WriteLine("hide..");
		overlay = false;
	}
}
<div style="text-align:center">
    <MMenu OffsetX NudgeWidth="200" CloseOnContentClick=false>
        <Activator>
            <MButton Color="primary">POPOVER MENU</MButton>
        </Activator>

        <ChildContent>
            <MCard>
                <MList>
                    <MListItem>
                        <MListItemAvatar>
                            <img src="https://cdn.vuetifyjs.com/images/john.jpg"
                                 alt="John">
                        </MListItemAvatar>
                    </MListItem>

                    <MListItemContent>
                        <MListItemTitle>John Leider</MListItemTitle>
                        <MListItemSubtitle>Founder of Vuetify</MListItemSubtitle>
                    </MListItemContent>

                    <MListItemAction>
                        <MButton Icon><MIcon>mdi-heart</MIcon></MButton>
                    </MListItemAction>
                </MList>

                <MDivider></MDivider>

                <MList>
                    <MListItem>
                        <MListItemAction>
                            <MCheckbox Color="primary"></MCheckbox>
                        </MListItemAction>
                        <MListItemTitle>
                            Enable messages
                        </MListItemTitle>
                    </MListItem>

                    <MListItem>
                        <MListItemAction>
                            <MCheckbox Color="purple"></MCheckbox>
                        </MListItemAction>
                        <MListItemTitle>
                            Enable hints
                        </MListItemTitle>
                    </MListItem>
                </MList>

                <MCardActions>
                    <MSpacer></MSpacer>
                    <MButton Text>Cacnel</MButton>
                    <MButton Text Color="primary">Save</MButton>
                </MCardActions>
            </MCard>
        </ChildContent>
    </MMenu>
</div>


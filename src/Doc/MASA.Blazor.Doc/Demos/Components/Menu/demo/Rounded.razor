<MRow Justify="@JustifyTypes.SpaceAround">
    @foreach (var item in _btns)
    {
        var index = Array.IndexOf(_btns, item);
        <MMenu rounded="rounded"
               OffsetY>
            <Activator>
                <MButton Color="@_colors[index]"
                         Class="white--text ma-5">
                    @item.Text Radius
                </MButton>
            </Activator>
            <ChildContent>
                <MList>
                    @for (int i = 0; i < 4; i++)
                    {
                        <MListItem Link>
                            <MListItemTitle>@($"Item {i}")</MListItemTitle>
                        </MListItem>
                    }
                </MList>
            </ChildContent>
        </MMenu>
    }
</MRow>

@code {
    Item[] _btns = 
    {
         new Item
         {
             Text="Removed",
             Rounded="0"
         },
         new Item
         {
             Text="Large",
             Rounded="lg"
         },
         new Item
         {
             Text="Custom",
             Rounded="b-xl"
         }
    };

    string[] _colors = new string[]
    {
        "deep-purple accent-4", "error", "teal darken-1"
    };

    class Item
    {
        public string Text { get; set; }
        public string Rounded { get; set; }
    }
}
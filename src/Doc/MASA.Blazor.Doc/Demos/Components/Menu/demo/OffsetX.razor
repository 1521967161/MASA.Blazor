<div style="text-align:center">
    <MCheckbox @bind-Checked="offset" Label="X offset"></MCheckbox>

    <MMenu OffsetX="@offset" Top>
        <Activator>
            <MButton Color="primary">DROPDOWN</MButton>
        </Activator>

        <ChildContent>
            <MList>
                <MListItemGroup>
                    @foreach (var item in titles)
                        {
                    <MListItem>
                        <MListItemContent>
                            <MListItemTitle>
                                @item
                            </MListItemTitle>
                        </MListItemContent>
                    </MListItem>
                    }
                </MListItemGroup>
            </MList>
        </ChildContent>
    </MMenu>
</div>

@code {
    string[] titles = {
    "Click Me",
    "Click Me",
    "Click Me",
    "Click Me 2",
    };

    bool offset = true;
}
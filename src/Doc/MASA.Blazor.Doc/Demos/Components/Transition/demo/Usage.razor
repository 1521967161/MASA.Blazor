<MSheet MinHeight="100" Width="@("30%")" Style="display:inline-flex">
    <MButton Color="primary" OnClick="()=>{_show1=!_show1;}">toggle</MButton>
    <FabTransition>
        <Element Show="_show1" Class="elevation-1 text-center" Style="width:100px;height:40px">
            Fab
        </Element>
    </FabTransition>
</MSheet>
<MSheet MinHeight="100" Width="@("30%")" Style="display:inline-flex">
    <MButton Color="primary" OnClick="()=>{_show2=!_show2;}">toggle</MButton>
    <ScaleTransition>
        <Element Show="_show2" Class="elevation-1 text-center" Style="width:100px;height:40px">
            Scale
        </Element>
    </ScaleTransition>
</MSheet>
<MSheet MinHeight="100" Width="@("30%")" Style="display:inline-flex">
    <MButton Color="primary" OnClick="()=>{_show3=!_show3;}">toggle</MButton>
    <ExpandXTransition>
        <Element Show="_show3" Class="elevation-1 text-center" Style="width:100px;height:40px">
            ExpandX
        </Element>
    </ExpandXTransition>
</MSheet>

@code {
    private bool _show1;
    private bool _show2;
    private bool _show3;
}


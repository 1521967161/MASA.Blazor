<MItemGroup Mandatory>
    <MContainer>
        <MRow>
            @for (var i = 0; i < 3; i++)
            {
                <MCol Span="4">
                    <MItem>
                        @{
                            var color = context.IsActive ? "primary" : " ";
                            <MCard Class="d-flex align-center" Color="@color" Click="context.Toggle" Dark Height="200">
                                @if (context.IsActive)
                                {
                                    <div class="text-h2 flex-grow-1 text-center">
                                        Active
                                    </div>
                                }
                            </MCard>
                        }
                    </MItem>
                </MCol>
            }
        </MRow>
    </MContainer>
</MItemGroup>


@using System.ComponentModel.DataAnnotations

<MForm Model="_person" EnableDataAnnotationsValidation="true">
    <MContainer>
        <MRow>
            <MCol Span="12" Sm="6" Md="3">
                <MTextField Label="Regular" @bind-Value="_person.Name"></MTextField>
            </MCol>
            <MCol Span="12" Sm="6" Md="3">
                <MTextField Label="Regular" Placeholder="PlaceHolder"></MTextField>
            </MCol>
            <MCol Span="12" Sm="6" Md="3">
                <MTextField Label="Solo" IsSolo="true"></MTextField>
            </MCol>
            <MCol Span="12" Sm="6" Md="3">
                <MTextField Label="Solo" IsSolo="true" Placeholder="PlaceHolder"></MTextField>
            </MCol>
        </MRow>
        <MRow>
            <MCol Span="12" Sm="6" Md="3">
                <MTextField Label="Filled" Filled="true"></MTextField>
            </MCol>
            <MCol Span="12" Sm="6" Md="3">
                <MTextField Label="Filled" Filled="true" Placeholder="PlaceHolder"></MTextField>
            </MCol>
            <MCol Span="12" Sm="6" Md="3">
                <MTextField Label="测试" Outlined="true"></MTextField>
            </MCol>
            <MCol Span="12" Sm="6" Md="3">
                <MTextField Label="Outlined" Outlined="true" Placeholder="PlaceHolder"></MTextField>
            </MCol>
        </MRow>
        <MRow>
            <MCol Span="12" Sm="6" Md="3">
                <MTextField Type="password" Label="password"></MTextField>
            </MCol>
            <MCol Span="12" Sm="6" Md="3">
                <MTextField Label="Regular" Placeholder="PlaceHolder"></MTextField>
            </MCol>
            <MCol Span="12" Sm="6" Md="3">
                <MTextField Label="Solo" IsSolo="true"></MTextField>
            </MCol>
            <MCol Span="12" Sm="6" Md="3">
                <MTextField Label="Solo" IsSolo="true" Placeholder="PlaceHolder"></MTextField>
            </MCol>
        </MRow>
    </MContainer>
</MForm>

@code {
    public class Person
    {
        [StringLength(5)]
        [Required]
        public string Name { get; set; }
    }

    private Person _person = new Person
    {
        Name = "zhangsan"
    };
}

@using System.ComponentModel.DataAnnotations

<MForm Model="_person" EnableDataAnnotationsValidation="true">
    <MContainer>
        <MRow>
            <MCol Span="12" Sm="6" Md="3">
                <MTextField Label="Regular" @bind-Value="_person.Name" Clearable></MTextField>
            </MCol>
            <MCol Span="12" Sm="6" Md="3">
                <MTextField Label="Regular" Placeholder="PlaceHolder" Clearable TValue="string"></MTextField>
            </MCol>
            <MCol Span="12" Sm="6" Md="3">
                <MTextField Label="Solo" Solo="true" AppendIcon="mdi-home" TValue="string"></MTextField>
            </MCol>
            <MCol Span="12" Sm="6" Md="3">
                <MTextField Label="Solo" Solo="true" Placeholder="PlaceHolder" TValue="string"></MTextField>
            </MCol>
        </MRow>
        <MRow>
            <MCol Span="12" Sm="6" Md="3">
                <MTextField Label="Filled" Filled="true" TValue="string"></MTextField>
            </MCol>
            <MCol Span="12" Sm="6" Md="3">
                <MTextField Label="Filled" Filled="true" Placeholder="PlaceHolder" TValue="string"></MTextField>
            </MCol>
            <MCol Span="12" Sm="6" Md="3">
                <MTextField Label="测试" Outlined="true" TValue="string"></MTextField>
            </MCol>
            <MCol Span="12" Sm="6" Md="3">
                <MTextField Label="Outlined" Outlined="true" Placeholder="PlaceHolder" TValue="string"></MTextField>
            </MCol>
        </MRow>
    </MContainer>
</MForm>

@code {
    public class Person
    {
        [StringLength(5)]
        [Required]
        public string Name { get; set; }
    }

    private Person _person = new Person
    {
        Name = "zhangsan"
    };
}

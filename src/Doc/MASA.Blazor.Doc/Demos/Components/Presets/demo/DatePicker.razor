<MRow>
    <MCol><MSwitch @bind-Value="_showTime" Label="Show time"></MSwitch></MCol>
    <MCol><MSwitch @bind-Value="_dialog" Label="Picker in Dialog"></MSwitch></MCol>
    <MCol><MSwitch @bind-Value="_readonly" Label="Readonly"></MSwitch></MCol>
</MRow>

<MASA.Blazor.Presets.PDatePicker @bind-Value="@_value" Time="_showTime" Readonly="_readonly" Dialog="_dialog">
</MASA.Blazor.Presets.PDatePicker>

@code {
    private bool _showTime = false;
    private bool _dialog = false;
    private bool _readonly = false;

    private DateTime _value = new DateTime(2021, 5, 20, 1, 1, 1);
}
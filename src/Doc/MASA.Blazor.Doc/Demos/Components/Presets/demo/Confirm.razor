@using AlertTypes = BlazorComponent.AlertTypes

<MRow>
    <MCol><MButton Color="primary" OnClick="() => Show()">Default</MButton></MCol>
    <MCol><MButton Color="success" OnClick="() => Show(AlertTypes.Success)">Success</MButton></MCol>
    <MCol><MButton Color="info" OnClick="() => Show(AlertTypes.Info)">Info</MButton></MCol>
    <MCol><MButton Color="warning" OnClick="() => Show(AlertTypes.Warning)">Warning</MButton></MCol>
    <MCol><MButton Color="error" OnClick="() => Show(AlertTypes.Error)">Error</MButton></MCol>
</MRow>

<MASA.Blazor.Presets.Confirm Visible="_visible" Title="确认操作" Type="_type" OnCancel="Hide" OnOk="HandleOnOk">
    您确认该操作吗？
</MASA.Blazor.Presets.Confirm>

@code {
    private AlertTypes _type = 0;
    private bool _visible = false;

    private void Show(AlertTypes type = 0)
    {
        _type = type;
        _visible = true;
    }

    private void Hide()
    {
        _visible = false;
    }

    private void HandleOnOk()
    {
        _visible = false;
    }
}
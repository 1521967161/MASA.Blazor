<MContainer Fluid>
    <MCheckbox @bind-Value="_custom"
               Label="Custom progress bar"></MCheckbox>
    @if (_custom)
    {
        <MTextField @bind-Value="_value"
                Color="cyan darken"
                Label="Text field"
                Placeholder="Start typing..."
                Loading="true">
            <ProgressContent>
                <MProcessLinear Color="error"
                            Absolute
                            Height="7"></MProcessLinear>
            </ProgressContent>
        </MTextField>
    }
    else
    {
        <MTextField @bind-Value="_value"
                Color="cyan darken"
                Label="Text field"
                Placeholder="Start typing..."
                Loading="true">
        </MTextField>
    }
</MContainer>

@code {
    private string _value = "";
    private bool _custom = true;
  }

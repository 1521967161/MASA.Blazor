
<MExpansionPanels>
    <MExpansionPanel>
        <MExpansionPanelHeader>
            isActive
        </MExpansionPanelHeader>
        <MExpansionPanelContent>
            <MTextField Value="_text" TValue="string"></MTextField>
        </MExpansionPanelContent>
    </MExpansionPanel>

    <MExpansionPanel>
        <MExpansionPanelHeader Icon="fas fa-burn">
            diy icon
        </MExpansionPanelHeader>
        <MExpansionPanelContent>
            this is diy icon
        </MExpansionPanelContent>
    </MExpansionPanel>

    <MExpansionPanel Disabled>
        <MExpansionPanelHeader>
            disabled
        </MExpansionPanelHeader>
        <MExpansionPanelContent>
            <MAlert Border="AlertBorder.Top"
                    Color="red lighten-2"
                    Dark>
                this is disabled
            </MAlert>

        </MExpansionPanelContent>
    </MExpansionPanel>

    <MExpansionPanel Disabled>
        <MExpansionPanelHeader>
            disabled and isActive
        </MExpansionPanelHeader>
        <MExpansionPanelContent>
            <MAlert Border="AlertBorder.Top"
                    Color="red lighten-2"
                    Dark>
                this is disabled and isActive
            </MAlert>

        </MExpansionPanelContent>
    </MExpansionPanel>


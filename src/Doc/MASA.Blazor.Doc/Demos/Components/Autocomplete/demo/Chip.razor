<MRow>
    <MCol Span="4">
        @string.Join(',', _values)
    </MCol>
    <MSpacer></MSpacer>
</MRow>
<MRow>
    <MCol Span="4">
        <MAutocomplete TValue="string" Chips="true" @bind-Values="_values" TItem="Item" Multiple Items="_items" ItemValue="r=>r.Value" ItemText="r=>r.Label"></MAutocomplete>
    </MCol>
    <MSpacer></MSpacer>
</MRow>

@code{
    public class Item
    {
        public string Label { get; set; }
        public string Value { get; set; }
    }

    private List<Item> _items = new List<Item>
{
        new Item {
            Value="0",
            Label="Alabama"
        },
        new Item {
            Value="1",
            Label="Alaska"
        },
        new Item {
            Value="2",
            Label="American Samoa"
        },
        new Item {
            Value="3",
            Label="Arizona"
        },
        new Item {
            Value="4",
            Label="Arkansas"
        },
        new Item {
            Value="5",
            Label="California"
        }
    };

    private List<string> _values = new List<string> {
        "1",
        "2"
    };
}


<MRow>
    <MCol Span="3">
        @_value
    </MCol>
    <MSpacer></MSpacer>
</MRow>
<MRow>
    <MCol Span="3">
        <MAutocomplete Loading="_loading" OnInput="HandleOnInputAsync" @bind-Value="_value" TValue="string" TItem="Item" Items="_items" ItemValue="r=>r.Value" ItemText="r=>r.Label"></MAutocomplete>
    </MCol>
    <MSpacer></MSpacer>
</MRow>

@code{
    public class Item
    {
        public string Label { get; set; }
        public string Value { get; set; }
    }

    private List<Item> _items = new List<Item>
{
        new Item {
            Value="0",
            Label="Alabama"
        },
        new Item {
            Value="1",
            Label="Alaska"
        },
        new Item {
            Value="2",
            Label="American Samoa"
        },
        new Item {
            Value="3",
            Label="Arizona"
        },
        new Item {
            Value="4",
            Label="Arkansas"
        },
        new Item {
            Value="5",
            Label="California"
        }
    };

    private string _value = "1";

    private bool _loading;

    public async Task HandleOnInputAsync(string queryText)
    {
        _loading = true;
        Console.WriteLine(queryText);
        await Task.Delay(1000);
        _loading = false;
    }
}


<MRow>
	<MCol Span="6">
		<MSelect Label="Standard"
				 Items="@items"
				 ItemText="u => u.Label"
				 ItemValue="u => u.Value">
		</MSelect>
	</MCol>
	<MCol Span="6">
		<MSelect Label="Filled style"
				 Filled
				 Items="@items"
				 ItemText="u => u.Label"
				 ItemValue="u => u.Value">
		</MSelect>
	</MCol>

	<MCol Span="6">
		<MSelect Label="Outlined style"
				 Outlined
				 Items="@items"
				 ItemText="u => u.Label"
				 ItemValue="u => u.Value">
		</MSelect>
	</MCol>
	<MCol Span="6">
		<MSelect Label="Solo style"
				 Solo
				 Items="@items"
				 ItemText="u => u.Label"
				 ItemValue="u => u.Value">
		</MSelect>
	</MCol>
</MRow>


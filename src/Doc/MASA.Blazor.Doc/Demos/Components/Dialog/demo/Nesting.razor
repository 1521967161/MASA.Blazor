<MRow Justify="@JustifyTypes.Center">
    <MButton Color="primary" OnClick="() => _visible = true">Open Dialog 1</MButton>

    <MDialog Visible="_visible" Width="500">
        <MCard>
            <MCardTitle>Dialog 1</MCardTitle>

            <MCardText>
                <MButton Color="primary" OnClick="() => _visible2 = true">Open Dialog 2</MButton>

                <MDialog Visible="_visible2" Width="500">
                    <MCard>
                        <MCardTitle>Dialog 2</MCardTitle>
                        <MCardActions>
                            <MButton Color="primary" Text OnClick="() => _visible2 = false">Close</MButton>
                        </MCardActions>
                    </MCard>
                </MDialog>
            </MCardText>

            <MCardActions>
                <MButton Color="primary"
                         Text
                         OnClick="() => _visible = false">
                    Close
                </MButton>
            </MCardActions>
        </MCard>
    </MDialog>
</MRow>

@code {
    bool _visible = false;

    bool _visible2 = false;
}
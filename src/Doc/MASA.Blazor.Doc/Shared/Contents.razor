<ul class="mb-6">
    @if (Items != null)
    {
        @foreach (var item in Items)
        {
            var exClass =item==ActiveItem? " primary--text router-link-active": "text--disabled";
            <li class="pl-3 text-body-2 py-1 font-weight-regular @exClass">
                <a @onclick="()=> HandleOnClick(item.Href)" @onclick:preventDefault @onclick:stopPropagation class="m-toc-link d-block transition-swing text-decoration-none">
                    @item.Title
                </a>
            </li>
        }
    }
</ul>

@inherits LayoutComponentBase
@layout BaseLayout

<MNavigationDrawer @bind-Value="BaseLayout.Drawer" Floating Fixed Width="333" App Clipped>
    <ChildContent>
        <NavMenu @key="NavigationManager.Uri"></NavMenu>
        <div class="pt-12"></div>
    </ChildContent>
</MNavigationDrawer>

<MMain Class="mainlayout-m-main" Style="background:#fff;">
    <MContainer Class="pa-4 pa-sm-6 pa-md-8" Fluid>
        <ErrorBoundary @ref="_errorBoundary">
            <ChildContent>
                @Body
            </ChildContent>
            <ErrorContent>
                <Error></Error>
            </ErrorContent>
        </ErrorBoundary>
    </MContainer>
</MMain>

<MNavigationDrawer Clipped Fixed Floating Right App Width="329" Class="doc-nav-right default-toc py-4">
    <PrependContent>
        <div class="mb-2 text-h6 font-weight-medium text--primary ml-6" path="contents">目录</div>
    </PrependContent>
    <ChildContent>
        <Contents></Contents>
        <div class="pt-4 pb-3 ml-6">
            <div class="ml-2 mb-3 text-caption font-weight-regular text--secondary" path="premiere-sponsors">高级赞助商</div>
            <MCard Tag="a" Ripple="false" Tile Class="d-inline-block px-2 py-1 transparent" Flat Link Style="box-shadow:none!important">
                <img src="https://cdn.masastack.com/stack/images/website/masa-blazor/lsd-logo.png" />
            </MCard>
        </div>
    </ChildContent>
</MNavigationDrawer>
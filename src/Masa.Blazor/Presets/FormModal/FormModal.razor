@namespace Masa.Blazor.Presets
@inherits Modal

<Masa.Blazor.Presets.Modal Visible="Visible"
                           BodyStyle="BodyStyle"
                           Title="@Title"
                           Width="Width"
                           MaxWidth="MaxWidth"
                           ShowActions="ShowActions"
                           ScrollToTopOnHide="ScrollToTopOnHide"
                           OkText="@OkText"
                           CancelText="@CancelText"
                           OnCancel="OnCancel"
                           OnOk="HandleOnOk"
                           ActionsContent="ActionsContent"
                           @attributes="Attributes">
    @if (Visible)
    {
        <MForm @ref="_form" Model="Model" EnableDataAnnotationsValidation>
            @ChildContent
        </MForm>
    }
</Masa.Blazor.Presets.Modal>
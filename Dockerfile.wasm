FROM registry.cn-hangzhou.aliyuncs.com/masa/dotnet_sdk:6.0.100-preview.7-nodejs14.16.1

WORKDIR /app
COPY . .
RUN dotnet workload install wasm-tools && dotnet build src

ENV LANG="zh_CN.UTF-8"
ENV LANGUAGE="zh_CN:zh"
ENV ASPNETCORE_URLS=http://0.0.0.0:5000

ENTRYPOINT ["dotnet","./src/Doc/MASA.Blaozr.Doc.WebAssembly.Host/bin/Debug/net6.0/MASA.Blazor.Doc.WebAssembly.Host.dll"]
